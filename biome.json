{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!.next", "!**/dist", "!**/build", "!**/node_modules"],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "next": "all"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": {
          "level": "error",
          "fix": "safe"
        },
        "noUnusedVariables": "warn"
      },
      "style": {
        "noHeadElement": "error",
        "noDefaultExport": "error",
        "useNodejsImportProtocol": {
          "level": "error",
          "fix": "safe"
        }
      },
      "suspicious": {
        "noDocumentImportInPage": "error",
        "noHeadImportInDocument": "error"
      },
      "performance": {
        "noImgElement": "error"
      },
      "nursery": {
        "noNextAsyncClientComponent": "error",
        "useSortedClasses": {
          "level": "error",
          "fix": "safe"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "jsxRuntime": "transparent",
    "parser": {
      "jsxEverywhere": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": [
        "src/pages/**",
        "src/app/**",
        "app/**",
        "pages/**",
        "**/*.config.js",
        "**/*.config.mjs",
        "**/*.config.ts",
        "**/middleware.ts",
        "**/*.stories.tsx",
        "**/*.stories.ts",
        "**/.storybook/*.tsx",
        "**/.storybook/*.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
